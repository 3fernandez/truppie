                      <tr>
                        <td> <a href="<%= organizer_url(@organizer) %>" target="_blank"><%= t('mail-organizer-see-profile') %></a> </td>
                      </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
<% end %>
