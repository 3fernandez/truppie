<%= render 'layouts/navbar' %>
<div class="form-signin">
<div class="container">
    <div class="row">
        <div class="col-xs-12">
        	<!-- Nav tabs -->
            <div class="card card-block">
                <div class="card-body" style="overflow:hidden;">
                    <h3 class="text-center spaced-down">
                        Gerenciamento de conta <small><%= link_to 'voltar para o guia', organizer_path(@organizer) %></small>
                    </h3>
                    <% if !@current_account.nil? %>
                    <p>Dados do titular:</p>
                    <div class="list-view-container">
                    	<div class="list-view-data">
	                    	<small>Nome:</small>
	                    	<%= @current_account["person"]["name"] %>
	                    	</p>
                    	</div>
                    	<div class="list-view-data">
	                    	<small>Sobrenome:</small>
	                    	<%= @current_account["person"]["lastName"] %>
	                    	</p>
                    	</div>
                    	<div class="list-view-data">
	                    	<small>Telefone:</small>
	                    	+<%= @current_account["person"]["phone"]["countryCode"] %> (<%= @current_account["person"]["phone"]["areaCode"] %>) <%= @current_account["person"]["phone"]["number"] %>
	                    	</p>
                    	</div>
                    	<%= @money_balance_json.inspect %>
                	</div>
                	<% end %>
                	<% if !@transfers_json.nil? %>
                	<h3>Transferencias</h3>
                	<div>
                		<%= @transfers_json.inspect %>
                	</div>
                	<% else %>
                		<p>Nenhuma transferência realizada</p>
                	<% end %>
                	<h3>Transferir para a conta</h3>
                	<%= form_tag('/organizers/transfer_funds', method: :post) do -%>
					  	<%= text_field_tag :amount %>
					  	<%= hidden_field_tag :id, @organizer.id %>
					  	<div><%= submit_tag 'Transferir' %></div>
					<% end -%>
					                	
                	<% if @organizer.persisted? %>
                	<% if !@money_account_json.nil? %>
		    		<h3>Contas</h3>
			    		<% if @organizer.active && @organizer.account_id && @organizer.token %>
							<p>Você tem <%= @money_account_json.length %> contas</p>
							
							<%= @money_account_json.inspect %>
							
						<% else %>
							<div class="spaced-down">
								<p>
								<small>Você pode receber diretamente na sua conta através da Truppie.<br/>
									Preencha todos os dados do titular para ativar um titular e assim obter uma conta para recebimento</small>
								</p>
			    			</div>
			    		<% end %>
		    		<% end %>
		    		<% end %>
				  </div>
				  <p><%= link_to 'Criar nova conta', new_bank_account_path, class: "btn btn-primary" %></p>
	            </div>
	        </div>
	    </div>
	</div>
</div>
<div id="fullscreen_bg" class="fullscreen_bg"/>
</div>