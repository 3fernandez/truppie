<div class="login-background">
	<div class="container">
	    <div class="row">
	        <div class="col-sm-6 col-md-4 col-md-offset-4">
	            <h1 class="text-center login-title spaced-smallest">Sign in to continue to Truppie</h1>
	            <div class="account-wall">
	            	<%= link_to root_path do %>
	                	<%= image_tag("logos-05.svg", :alt => "Truppie", :class => 'img-fluid center-block') %>
	                <% end %>
	                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
	                	<%= f.email_field :email, autofocus: true, required: true, placeholder: 'Email', class: 'form-control' %>
	                	<%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
	                	<%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
	                	 <% if devise_mapping.rememberable? -%>
						      <%= f.check_box :remember_me %>
						      <%= f.label :remember_me %>
						  <% end -%>
	                	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
						  <%= link_to "Create account", new_registration_path(resource_name), class: 'pull-right' %><br />
						<% end -%>
	                <% end %>
	            </div>
	            <%= render "devise/shared/links" %>
	        </div>
	    </div>
	</div>
</div>

