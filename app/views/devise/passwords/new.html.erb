<%= render 'layouts/flash' %>
<%= devise_error_messages! %>
<div class="login-background">
	<div class="container">
	    <div class="row">
	        <div class="col-sm-6 col-md-4 col-md-offset-4">
	            <h1 class="text-center login-title spaced-smallest">Forgot Password</h1>
	            <div class="account-wall">
	            	<%= link_to root_path do %>
	                	<%= image_tag("logos-05.svg", :alt => "Truppie", :class => 'img-fluid center-block') %>
	                <% end %>
	                <%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:method => 'post', :class => "form-signin"}) do |f| %>
	                	<%= f.email_field :email, autofocus: true, required: true, placeholder: 'Email', class: 'form-control' %>
	                	<%= f.submit "Send me password instructions", class: 'btn btn-lg btn-primary btn-block' %>
	                <% end %>
	            </div>
	            <%= render "devise/shared/links" %>
	        </div>
	    </div>
	</div>
</div>