<p id="notice"><%= notice %></p>

<h1>Listing Bank Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Marketplace</th>
      <th>Bank number</th>
      <th>Agency number</th>
      <th>Agency check number</th>
      <th>Account number</th>
      <th>Account check number</th>
      <th>Type</th>
      <th>Doc type</th>
      <th>Doc number</th>
      <th>Fullname</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.marketplace %></td>
        <td><%= bank_account.bank_number %></td>
        <td><%= bank_account.agency_number %></td>
        <td><%= bank_account.agency_check_number %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.account_check_number %></td>
        <td><%= bank_account.bank_type %></td>
        <td><%= bank_account.doc_type %></td>
        <td><%= bank_account.doc_number %></td>
        <td><%= bank_account.fullname %></td>
        <td><%= bank_account.active %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

