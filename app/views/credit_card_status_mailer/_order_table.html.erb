<table cellpadding="5" cellspacing="0" border="2" align="center">
    <thead>
        <tr>
        <th><span>Truppie</span></th>
        <th><span>Reservada em</span></th>
        <th><span>CÃ³digo do pedido</span></th>
        <th>Valor</th>
        <th>Reservas</th>
        <th>Total</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td width="30%">
                <%= link_to order.tour.title, tour_url(order.tour), class: 'user-link' %>
                <span class="user-subhead"><%= order.tour.organizer.name %></span>
            </td>
            <td><%= l(order.created_at, format: '%d de %B as %I:%M %p')  %></td>
            <td class="text-center">
                <%= order.payment %>
            </td>
            <td width="20%">
               <h3><%= raw final_price(order.price) %></h3>
               <% if order.tour.try(:packages) %>
               		<% order.tour.packages.each do |p| %>
        						<% if p.value == order.price %>
        							Pacote <%= p.name %>
        						<% end %>						                                       		
               		<% end %>
               <% end %>
            </td>
            <td class="text-center">
              <h3><%= order.amount %></h3>
            </td>
            <td class="text-center">
              <% if order.final_price.nil? %>
              <h4><%= raw final_price(order.price) %></h4>
              <% else %>
              <h4><%= raw final_price(order.final_price) %></h4>
              <% end %>
            </td>
        </tr>
    </tbody>
</table>